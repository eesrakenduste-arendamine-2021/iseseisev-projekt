{
    "manifest_version": 2,

    "name": "Joll",
    "description": "Joller",
    "version": "1.0",

    "browser_action": {
        "default_icon": "e.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "webNavigation"
    ],
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": ["jquery-3.6.0.min.js", "content.js"]
    }]
}